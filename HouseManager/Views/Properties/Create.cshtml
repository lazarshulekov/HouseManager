@model HouseManager.ViewModels.PropertyViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Property</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Area" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PropertyTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PropertyTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.AllPropTypes, "Id", "Type"))" ></select>
                <span asp-validation-for="PropertyTypeId" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AppUserId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AppUserId" class="form-control" asp-items="@(new SelectList(ViewBag.AllUsers, "Id", "Email"))" ></select>
                <span asp-validation-for="AppUserId" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BuildingId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="BuildingId" class="form-control" asp-items="@(new SelectList(ViewBag.AllBuildings, "Id", "Name"))" ></select>
                <span asp-validation-for="BuildingId" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

