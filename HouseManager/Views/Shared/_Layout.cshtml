@*@using Microsoft.AspNetCore.Authorization*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="/Content/custom_bootstrap.min.css" rel="stylesheet" />
    <!--<link href="/Content/site.css" rel="stylesheet" />-->
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>


    <style>
        /*.table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
            background-color: lightgray;
        }*/

        body {
            padding-top: 0;
        }

        [class*=col-md] {
            background-color: white;
            /*padding: 1%;*/
            /*border-style: solid;
            border-color: lightgray;
            border-width: 1px;*/
        }

        .navbar {
            border-style: solid;
            border-color: lightgray;
            border-width: 1px;
        }

        body {
            background-color: lightgray /*background: url('/Content/Images/architecture.jpg') no-repeat center center fixed;*/
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            background-position: 0 0;
        }
    </style>
    <title>House manager</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">House Manager</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse pull-right">
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole("Administrator"))
                        {
                            Html.RenderPartial("~/Views/AdminsMenu.cshtml");
                        }
                        @if (User.IsInRole("HouseManager"))
                        {
                            Html.RenderPartial("~/Views/HouseManagersMenu.cshtml");
                        }
                        @if (User.IsInRole("PropertyOwner"))
                        {
                            Html.RenderPartial("~/Views/PropertyOwnersMenu.cshtml");
                        }
                        <li class="dropdown">
                            <a asp-action="Logout" asp-controller="Account">@User.Identity.Name</a>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div><!--/.container-fluid -->
        </nav>
        <div class="1">

            <div class="row-fluid row-grid">
                <div class="col-md-8 img-rounded ">
                    @RenderBody()
                </div>
                <div class="col-md-3 hidden-xs img-rounded col-md-offset-1">House manager is a software which provides easy solution for managing common problems. It provides mechanisms to store all properties inside a building, their owners and the expenses that each owner need to pay. </div>
            </div>
        </div>
    </div>
</body>
</html>